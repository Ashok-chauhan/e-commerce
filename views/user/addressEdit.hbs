
<div class="col-md-4 mx-auto ">
  <h2 class="text-center">Manage address</h2>
  
<form action="/address" method="POST" >
  
    <div class="form-group mt-1">
        <textarea name="address"  class="form-control" id="address" placeholder="Address (Area and Street)" rows="3">{{address.address}}</textarea>
    </div>
   <div class="form-group mt-1">
        <input type="text" class="form-control" id="locality" name="locality" value="{{address.locality}}"  placeholder="Locality" required>
   </div>
   <div class="form-group mt-1">
        <input type="text" class="form-control" id="landmark" name="landmark" value="{{address.landmark}}"  placeholder="Landmark (optional)" >
   </div>
    <div class="form-group mt-1">
        <input type="text" class="form-control" id="city" name="city" value="{{address.city}}"  placeholder="City/Distrinct/Town" required>
   </div>
    <div class="form-group mt-1">
        <input type="text" class="form-control" id="pincode" name="pincode" value="{{address.pincode}}"  placeholder="Pincode" required>
   </div>
   <div class="form-group mt-1">
        <input type="text" class="form-control" id="state" name="state" value="{{address.state}}"  placeholder="State" required>
   </div>
    
    <div class="form-group mt-1">
        <input type="text" class="form-control" id="phone" name="phone" value="{{address.phone}}"  placeholder="Alternate Phone(Optioal)" >
   </div>
    <input type="hidden"  name="id" value="{{address.id}}"  />

  <button type="submit" class="btn btn-primary mt-2">Update address</button>
</form>
</div>