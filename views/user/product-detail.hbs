<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@type": "Product",
  "name": "{{product.name}}",
  "image": [
   {{#each product.images}}
    "https://swagly.in/assets/images/{{this.image_path}}"
   {{/each}}
    ],
  "description": "{{product.description}}",
  "sku": "{{product.id}}",
  "brand": {
    "@type": "Brand",
    "name": "Swagly"
  },
  "offers": {
    "@type": "Offer",
    "url": "https://swagly.in/product/{{product.slug}}",
    "priceCurrency": "INR",
    "price": "{{product.price}}",
    "availability": "https://schema.org/InStock",
    "itemCondition": "https://schema.org/NewCondition"
  }
}
</script>


<div class="row">
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-1 d-none d-md-block">

         {{#each product.images}}
            <div class="thumbnails">
              <img src="/assets/images/{{this.image_path}}" alt="{{../product.name}}" onclick="changeImage(this)" />
              </div>
            {{/each}}
      </div>

      
    
          <div class="col-md-11">
                <div class="product-gallery">
                  <div class="main-image">
                      <img id="currentImage" src="/assets/images/{{product.images.[0].image_path}}" alt="{{../product.name}}" >
                    </div>
                
            </div>
          </div>

    </div>

