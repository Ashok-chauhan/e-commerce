      <div class="row d-block d-md-none">
            <div class="d-flex flex-row flex-wrap justify-content-between">
              {{#each product.images}}
                <div class="thumbnails p-1">
                  <img src="/assets/images/{{this.image_path}}" 
                      alt="{{../product.name}}" 
                      onclick="changeImage(this)" 
                      class="img-fluid" />
                </div>
              {{/each}}
            </div>
       </div>


  </div>
  <div class="col-md-4">
      <h4>{{product.name}}</h4>


       {{#if product.discount_percent}}
            <p>
              <span class="original-price">M.R.P ₹{{product.price}}</span>
              <span class="discount">(-{{product.discount_percent}}% off)</span>
            </p>
            <p class="final-price">₹{{product.discounted_price}}</p>
          {{else}}
            <p class="final-price">₹{{product.price}}</p>
          {{/if}}

     
            <form method="POST" action="/cart/add" >
            <div class="row">

              <!-- Image Swatches -->
                    <div class="mb-3">
                      <label class="form-label fw-bold">Select Color:</label>
                      <div class="d-flex gap-2 flex-wrap">
                        {{#each product.swatches}}
                          <label class="swatch" >
                            <input type="radio" name="swatch_id" value="{{this.id}}" required>
                           <img src="/assets/images/{{this.picture}}" class="swatch-img" alt="{{this.picture}}"
                           onclick="selectSwatch('{{this.product_image}}')"
                            >
                          </label>
                        {{/each}}
                      </div>
                    </div>


                <div class="col-md-2">
                <input type="hidden" name="product_id" value="{{product.id}}" />
                    <input type="number" class="form-control" name="quantity" value="1" min="1" required />
                </div>
                <div class="col">
                  <button type="submit" class="btn btn-warning">Add to Cart</button>
                </div>
              </div>
            </form>

      <p>{{{product.description}}}</p>
      {{#if product.sales_package}}
      <p>Sales package: {{product.sales_package}}</p>
      {{/if}}
       {{#if product.pack_of}}
      <p>Pack of: {{product.pack_of}}</p>
      {{/if}}
       {{#if product.barnd}}
      <p>Brand: {{product.brand}}</p>
      {{/if}}
       {{#if product.model}}
