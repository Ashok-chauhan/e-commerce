      {{/if}}
       {{#if product.brand_color}}
      <p>Brand color: {{product.brand_color}}</p>
      {{/if}}
       {{#if product.care}}
      <p>Care: {{product.care}}</p>
      {{/if}}
       {{#if product.skin_type}}
      <p>Skin type: {{product.skin_type}}</p>
      {{/if}}
       {{#if product.finish}}
      <p>Finish: {{product.finish}}</p>
      {{/if}}
       {{#if product.duration}}
